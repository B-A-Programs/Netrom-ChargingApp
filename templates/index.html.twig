{% extends "base.html.twig" %}

{% block body %}
    <div class="container-fluid" style="padding: 20px 40px; text-align: center;">
        <div class="row m-1">
            {% for loc in locations %}
                <div class="card col-6 post">
                    <a href="#" style="color: black; text-decoration: none;">
                        <div class="card-body">
                            <h3 class="card-title mb-0"><strong>{{ loc.name }}</strong></h3>
                            <h5 style="color: rgb(63, 59, 59);">City: {{ loc.city }} | Number of stations: {{ loc.getStationsNumber() }} | Price: {{ loc.price }}</h5>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}