{% extends "base.html.twig" %}

{% block body %}
    <div class="container-fluid" style="padding: 20px 40px; text-align: center;">
        <form style="text-align: center;">
            <div class="form-row">
                <div class="form-group col-6">
                    <select id="city" class="form-control" name="city">
                        <option disabled selected>City</option>
                    </select>
                </div>
                <div class="form-group col-6">
                    <select id="charger" class="form-control" name="charger">
                        <option disabled selected>Charger type</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary col-1" style="margin-left: 46%">Filter</button>
            </div>
        </form>

        <h1><strong>{{ title }}</strong></h1>
        <hr>
        <div class="row m-1">
            {% for loc in locations %}
                <div class="card col-6 post">
                    <a href="{{ path('location', {'name': loc.name}) }}" style="color: black; text-decoration: none;">
                        <div class="card-body">
                            <h3 class="card-title mb-0"><strong>{{ loc.name }}</strong></h3>
                            <h5 style="color: rgb(63, 59, 59);">City: {{ loc.city }} | Number of stations: {{ loc.getStationsNumber() }} | Price: {{ loc.price }}$/kW</h5>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}